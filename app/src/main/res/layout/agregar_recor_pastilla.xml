<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NombreMedicamento"
        android:id="@+id/LnomMedi"
        android:textSize="40px" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/spMedicamentos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FechaIni"
        android:id="@+id/LfechaIni"
        android:textSize="40px" />

    <EditText
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/TbfechaIni" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FechaFin"
        android:id="@+id/Lfechafin"
        android:textSize="40px" />

    <EditText
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/Tbfechafin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hORAiNI"
        android:id="@+id/textView5"
        android:textSize="40px" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/tbHora"
        android:linksClickable="false"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Cantidadtoma"
        android:id="@+id/LCantidad"
        android:textSize="40px" />

    <EditText
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:inputType="none|numberDecimal"
        android:ems="10"
        android:id="@+id/tbCantidad" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Cadacuanto"
        android:id="@+id/LTiempo"
        android:textSize="40px" />

    <EditText
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/tbTiempo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ConfigAvanzada"
        android:textColorLink="@color/highlighted_text_material_dark"
        android:id="@+id/textView4"
        android:textSize="40px" />

    <ImageView
        android:layout_width="78dp"
        android:layout_height="57dp"
        android:id="@+id/Config"
        android:src="@drawable/config"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AÃ±adRecord"
        android:id="@+id/btAnadirRec" />

</LinearLayout>