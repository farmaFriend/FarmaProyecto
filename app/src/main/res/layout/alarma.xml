<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ImAlarm"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/alarma" />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="@string/Parar"
        android:id="@+id/btAcepAla"
        android:layout_below="@+id/ImAlarm"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Tomar"
        android:id="@+id/tvToma"
        android:layout_alignRight="@+id/spRecorMed"
        android:layout_marginRight="180dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dip" />
    <Spinner
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/spRecorMed"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dip"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>