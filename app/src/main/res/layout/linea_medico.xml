<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >

    <ImageView
        android:id="@+id/ImMedico"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:src="@drawable/doctor" />

    <TextView
        android:id="@+id/sLMedico"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/ImMedico"
        android:text="Description"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/fLMedico"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/sLMedico"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/ImMedico"
        android:gravity="center_vertical"
        android:text="Example application"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dirMedico"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/ImMedico"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="***************"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/ImQuitarMedico"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dip"
        android:contentDescription="Quitar"
        android:src="@drawable/elimina" />

    <ImageView
        android:id="@+id/ImModificarMedico"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/ImQuitarMedico"
        android:layout_marginRight="6dip"
        android:contentDescription="Modificar"
        android:src="@drawable/modif" />

</RelativeLayout>